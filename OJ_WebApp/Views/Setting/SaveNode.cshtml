@model OJ_WebApp.Models.Node

<div class="col-lg-12">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.NodeSetting
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("SaveNode", "Setting", FormMethod.Post, new { @role = "form" }))
                        {
                            <div hidden="hidden">
                                @Html.TextBoxFor(x => x.Name)
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Node:</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "true" })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Enable:</label>
                                <label>
                                    @Html.CheckBoxFor(x => x.inUse)
                                </label>
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.WorkDir:</label>
                                @Html.TextBoxFor(x => x.WorkDir, new { @class = "form-control", placeholder = @Resources.Language.TypeWorkDir })
                            </div>
                                <div class="col-lg-6" style="padding-left: 0">
                                    <div class="form-group">
                                        <label>@Resources.Language.Heartbeat:</label>
                                        @Html.TextBoxFor(x => x.Heartbeat, new { @class = "form-control", placeholder = @Resources.Language.TypeHeartbeat })
                                    </div>
                                </div>
                                <div class="col-lg-6" style="padding-left: 0;padding-right: 0">
                                    <div class="form-group">
                                        <label>@Resources.Language.MaxTask:</label>
                                        @Html.TextBoxFor(x => x.MaxTask, new { @class = "form-control", placeholder = @Resources.Language.TypeMaxTask })
                                    </div>
                                </div>
                                <button class="btn btn-default" type="submit">@Resources.Language.Submit</button>
                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.MaxTask
            </div>
            <div class="panel-body">
                @Resources.Language.MaxTaskStr
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>