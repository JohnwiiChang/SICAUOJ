@model OJ_WebApp.Models.Lib

<div class="col-lg-12">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.EditLib
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("SaveLib", "Admin", FormMethod.Post, new { @role = "form" }))
                        {
                            <div hidden="hidden">
                                @Html.TextBoxFor(x => x.Id)
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.LibName</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = @Resources.Language.TypeName })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.LibDescription:</label>
                                @Html.TextAreaFor(x => x.Intro, new { @class = "form-control", placeholder = @Resources.Language.TypeDescription })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Group:</label>
                                <label>
                                    @Html.CheckBoxFor(x => x.isPrivate, new { @onchange = "OnChange()" })
                                </label>
                                @{
                                    String g = "";
                                    if (Model.Groups != null)
                                    {
                                        foreach (var item in Model.Groups)
                                        {
                                            g += "#" + item.Id;
                                        }
                                    }
                                }
                                <textarea class="form-control" id="group-set" name="group-set" cols="5" placeholder="@Resources.Language.PleaseEnterIDAndSeparateBySharp">@g</textarea>
                            </div>
                            <button class="btn btn-default" type="submit">@Resources.Language.Submit</button>
                                    }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.Attention
            </div>
            <div class="panel-body">
                <h4>@Resources.Language.Group</h4>
                <blockquote>
                    @Resources.Language.LibGroupQA
                </blockquote>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>