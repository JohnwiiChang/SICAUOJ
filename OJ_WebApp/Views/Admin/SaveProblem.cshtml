@model OJ_WebApp.Models.Issue

<div class="col-lg-12">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.EditQuestion
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("SaveProblem", "Admin", FormMethod.Post, new { @role = "form" }))
                        {
                            <div hidden="hidden">
                                @Html.TextBoxFor(x => x.Id)
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Title:</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = @Resources.Language.TypeTitle })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Question:</label>
                                @Html.TextAreaFor(x => x.Content, new { @class = "form-control", placeholder = @Resources.Language.TypeQuestion, rows = "9" })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.MemoryLimitations:</label>
                                @Html.TextBoxFor(x => x.PrivateMemorySize, new { @class = "form-control", placeholder = @Resources.Language.TypeLimitation })
                            </div>
                            <div class="col-lg-6" style="padding-left: 0">
                                <div class="form-group">
                                    <label>@Resources.Language.CompileTime:</label>
                                    @Html.TextBoxFor(x => x.ComplieTime, new { @class = "form-control", placeholder = @Resources.Language.TypeTimeSpan })
                                </div>
                            </div>
                            <div class="col-lg-6" style="padding-left: 0;padding-right: 0">
                                <div class="form-group">
                                    <label>@Resources.Language.RunTime:</label>
                                    @Html.TextBoxFor(x => x.RunTime, new { @class = "form-control", placeholder = @Resources.Language.TypeTimeSpan })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Input:</label>
                                @Html.TextAreaFor(x => x.Input, new { @class = "form-control", placeholder = @Resources.Language.TypeInput, rows = "5" })
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.Output:</label>
                                @Html.TextAreaFor(x => x.Output, new { @class = "form-control", placeholder = @Resources.Language.Output, rows = "5" })
                            </div>
                            <button class="btn btn-default" type="submit">@Resources.Language.Submit</button>

                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.Wildcard
            </div>
            <div class="panel-body">
                <h4>@Resources.Language.OJAttribute</h4>
                <blockquote>
                    <p>[code][/code]: @Resources.Language.OJA_Code</p>
                    <p>[title][/title]: @Resources.Language.OJA_Title</p>
                    <p>[img][/img]: @Resources.Language.OJA_Image</p>
                    <p>[math][/math]: @Resources.Language.OJA_Math</p>
                </blockquote>
            </div>
            <div class="panel-body">
                <h4>[thisisaseparator]</h4>
                <blockquote>
                    <p>@Resources.Language.OJA_Separator</p>
                    <small>*:@Resources.Language.OJA_SeparatorDescription<code>\r\n[thisisaseparator]\r\n</code>.</small>
                </blockquote>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>