@model OJ_WebApp.Models.Group

<div class="col-lg-12">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.EditGroup
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("SaveGroup", "Admin", FormMethod.Post, new { @role = "form" }))
                        {
                            <div hidden="hidden">
                                @Html.TextBoxFor(x => x.Id)
                            </div>
                            <div class="form-group">
                                <label>@Resources.Language.GroupName:</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = Resources.Language.TypeGroupName })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.CheckBoxFor(x => x.isAdmin)
                                </label>
                                <label>@Resources.Language.IsAdmin</label>
                            </div>
                            if (ViewBag.New == "New")
                            {
                                <div hidden="hidden">
                                    <input type="text" id="new_" name="new_" value="@ViewBag.New" />
                                    <textarea class="form-control" id="user-set" name="user-set"></textarea>
                                </div>
                            }
                            else {
                                <div class="form-group">
                                    <label>@Resources.Language.Member</label>
                                    @{
                                        String g = "";
                                        if (Model.Users != null)
                                        {
                                            foreach (var item in Model.Users)
                                            {
                                                g += "#" + item.Id;
                                            }
                                        }
                                    }
                                    <textarea class="form-control" id="user-set" name="user-set" cols="5" placeholder="@Resources.Language.PleaseEnterIDAndSeparateBySharp">@g</textarea>
                                </div>}
                                        <button class="btn btn-default" type="submit">@Resources.Language.Submit</button>
                                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Language.Attention
            </div>
            <div class="panel-body">
                <h4>@Resources.Language.Member</h4>
                <blockquote>
                    <p>@Resources.Language.GroupQA</p>
                </blockquote>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>