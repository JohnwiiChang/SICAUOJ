@model OJ_WebApp.Models.Game

@{
    ViewBag.Title = Model.Name;
}
<div class="col-lg-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>@Resources.Language.UserName</th>
                <th>@Resources.Language.Solved</th>
                <th>@Resources.Language.Mistake</th>
                <th>@Resources.Language.Total</th>
            </tr>
        </thead>
        <tbody>
            @{
                var group = Model.GameLib.Groups;
                if (group.Count != 0)
                {
                    foreach (var item in group.Last().Users.OrderByDescending(x=>x.Solved).ThenBy(x=>x.Total))
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <th>
                                @item.Solved （@item.SpanOfSolved 秒）
                            </th>
                            <td>
                                @item.Err （@(item.Err * 1200) 秒）
                            </td>
                            <td>
                                @item.Total 秒
                            </td>
                        </tr>
                                        }
                                    }
            }
        </tbody>
    </table>
</div>
