
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registration</title>
    <meta content="width =device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
</head>
<body>
    <table>
        <tr>
            <td>@Resources.Language.Request IP:</td>
            <td>@ViewBag.IP</td>
        </tr>
        <tr>
            <td>@Resources.Language.Register URL:</td>
            <td><a href="http://@(Request.Url.Host.ToString() + (Request.Url.Port == 80 ? "" : (":" + Request.Url.Port.ToString())) + Url.Action("Reg", "User", new { verify = ViewBag.Code, email = ViewBag.Email }))" target="_blank">http://@(Request.Url.Host.ToString() + (Request.Url.Port == 80 ? "" : (":" + Request.Url.Port.ToString())) + Url.Action("Reg", "User", new { verify = ViewBag.Code, email = ViewBag.Email }))</a></td>
        </tr>
    </table>
    <br />
    <footer>
        &copy; @Resources.Language.SICAUIEC @DateTime.Now.Year | Powered by Johnwii.Chang
    </footer>
</body>
</html>